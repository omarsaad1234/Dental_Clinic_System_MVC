@{
    ViewData["Title"] = "Create";
    int index = ViewBag.index;
    int PatientId = ViewBag.patId;
}

<h1>Create</h1>

<h4>Dental History</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDownRight" enctype="multipart/form-data" id="create_2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Index" id="Index" value="@index" />
            <input type="hidden" name="PatientId" id="PatientId" value="@PatientId" />
            <div class="form-group">
                <label for="Images" class="control-label">Images</label>
                <input type="file" name="Images" id="Images" class="form-control" multiple />
            </div>
            <div class="form-group">
                <label for="IsWorkingOn" class="control-label">Is Working On ?</label>
                <input type="checkbox" name="IsWorkingOn" id="IsWorkingOn" />
            </div>
        </form>
        <div class="form-group">
            <label for="Detail" class="control-label">Detail</label>
            <textarea form="create_2" id="Detail" name="Detail" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input form="create_2" type="submit" value="Create" class="btn btn-cust" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
